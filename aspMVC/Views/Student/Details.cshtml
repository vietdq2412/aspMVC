@model aspMVC.Models.Student

@{
    ViewData["Title"] = "Details";
    List<Subject> subjectsList = (List<Subject>)ViewData["subject"];
}
<div class="row">
    <h1>Details</h1>
</div>
<div class="row">
    
    <div class="col-6">
        
        <div>
            <h4>Student</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Classes.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Classes.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>

    </div>
    <div class="col-6">
        <h4>Subjects</h4>
        <ul class="list-group list-group-flush">
            @foreach (var item in Model.Subjects) {
                <li class="list-group-item">@Html.DisplayFor(modelItem => item.Name)</li>
            }
        </ul>

        <form asp-controller="Student" asp-action="AddSubject" method="post">
            <div class="form-group">
                <label for="subjectId">Select Subject:</label>
                <select class="form-control" id="subjectId" name="subjectId">
                    @foreach (var subject in subjectsList)
                    {
                        <option value="@subject.Id">@subject.Name</option>
                    }
                </select>
            </div>
            <input type="hidden" name="studentId" value="@Model.Id" />
            <button type="submit" class="btn btn-primary">Add Subject</button>
        </form>
    </div>
</div>

